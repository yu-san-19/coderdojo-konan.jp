= simple_form_for [:admin, @post] do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message
  
  = f.input :title
  = f.input :slug
  = f.input :published_at, as: :date_time_picker
  = f.input :body
  = f.input :author_id
  = f.button :submit